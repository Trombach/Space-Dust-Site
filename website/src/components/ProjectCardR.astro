---
import { Image } from "astro:assets";

const {title, description,imgaddr} = Astro.props;
---
<div class="project-card bg-gradient-to-r from-primary to-blue-500 rounded-lg p-6 shadow-md hover:scale-105 transition-transform ">
    <div class="flex items-center">
      <div class="w-48 h-48">
        <Image src={imgaddr} alt="Project Image" class="rounded-lg w-48 h-48 object-cover"></Image>
      </div>
      <div class="ml-4">
        <h3 class="text-xl font-bold">{title}</h3>
        <p class="text-gray-600">{description}</p>
        <a href="/">
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Learn More</button>
        </a>
      </div>
    </div>
  </div>